<% layout("/layouts/boilerplate")%>
    <div class="row">
        <div class="col-8 offset-2"><br>
            <h3>Create a new listing</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="title" class="form">Title</label>
                    <input class="form-control" name="listing[title]" placeholder=" Add a Catchy Title" required />
                    <div class="invalid-feedback">Please enter Title</div>
                    <div class="valid-feedback">Title looks Good!</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-lable">Description</label>
                    <textarea class="form-control" name="listing[description]" type="text" required >
        </textarea>
                </div>
                <div class="mb-3">
                    <label for="image" class="form-lable">Image Link</label>
                    <input type="text" name="listing[image]" class="form-control" placeholder="Image Filename"
                        required /><br>
                    <input type="text" name="listing[image][url]" class="form-control" placeholder="Image URL" required
                         />
                         <div class="invalid-feedback">Please Provide Valid Image</div>
                </div>
                <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-lable">Price</label>
                    <input name="listing[price]" placeholder="Enter price" class="form-control" 
                        required />
                        <div class="invalid-feedback">Please enter valid Price!</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-lable">Country</label>
                    <input class="form-control" name="listing[country]" placeholder="Enter country" required/>
                    <div class="invalid-feedback">Please enter Country!</div>
                    <div class="valid-feedback">Valid Country!</div>
                </div>
                </div>
                <div class="mb-3 ">
                    <label for="location" class="form-lable">Location</label>
                    <input name="listing[location]" placeholder="Enter location" class="form-control" required />
                    <div class="invalid-feedback">Please enter valid Location!</div>
                </div>
                <br>
                <button  class="btn btn-dark add-btn">Add</button>
                
            </form>
        </div>
    </div>