<% layout("/layouts/boilerplate") %>
<body>
    <h3>Listing Detail</h3>
    <ul>
        <li>Title: <%= listing.title %></li>
        <li>Description: <%= listing.description %></li>
        <li>Price: &#8377;<%= listing.price.toLocaleString('en-IN') %></li>
        <li>Location: <%= listing.location %></li>
        <li>Country: <%= listing.country %></li>
    </ul>
    <br>
    <a href="/listings/<%= listing._id %>/edit">Edit this listing</a><br>
    
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
        <button type="submit">Delete this listing</button>
    </form>
</body>

