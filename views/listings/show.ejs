<% layout("/layouts/boilerplate") %>

  <div class="row">
    <div class="col-8 offset-2">
    <h3 class="mt-3"><%= listing.title %></h3>
    <div class="card" style="width: 18rem;">
        <img  src="<%= listing.image.url %>" class="show-img" alt="<%= listing.title %>">

      </div>

    <ul>
        
        <li>Description: <%= listing.description %></li>
        <li>Price: &#8377;<%= listing.price.toLocaleString('en-IN') %></li>
        <li>Location: <%= listing.location %></li>
        <li>Country: <%= listing.country %></li>
    </ul>
    <br>
    <div class="edit-del">
      <a href="/listings/<%= listing._id %>/edit"
         class="btn btn-dark edit-btn">Edit </a><br>
    
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" 
      onsubmit="return"><br>
        <button type="submit" class="btn btn-dark  del-btn">Delete</button>
    </form>
    </div>
    <div>
      <hr>
      <h4 class="col-8">
        Leave A Review</h4>
        <form class="mb-3" action="/listings/<%= listing.id%>/reviews" method="POST">
          <div class="mb-3 mt-3">
            <label for="rating" class="form-lable"> Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" />
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-lable"> Comments</label>
            <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="5"
            class="form-control"
            ></textarea>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
  </div>
  </div>
