<% layout("/layouts/boilerplate") %>

  <div class="row">
    <div class="col-8 offset-2">
      <h3 class="mt-3">
        <%= listing.title %>
      </h3>
      <div class="card listing-card" style="width: 18rem">
        <img src="<%= listing.image.url %>" class="show-img" alt="<%= listing.title %>">

      </div>

      <ul>
        <li>Owner: <%= listing.owner.username%></li>
        <li>Description: <%= listing.description %>
        </li>
        <li>Price: &#8377;<%= listing.price.toLocaleString('en-IN') %>
        </li>
        <li>Location: <%= listing.location %>
        </li>
        <li>Country: <%= listing.country %>
        </li>
      </ul>
      <br>

      <% if(currUser && currUser._id.equals(listing.owner._id)) { %>

      <div class="edit-del">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark edit-btn">Edit </a><br>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return"><br>
          <button type="submit" class="btn btn-dark  del-btn">Delete</button>
        </form>
      </div>
      <%}%>
      <div>
        <hr>
        <%if(currUser) {%>
        <h4 class="col-8">
          Leave A Review</h4>
        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
          <div class="mb-3 mt-3>
            <label for="rating" class="form-lable"> Rating</label>
          <fieldset class="starability-slot">
            <!-- <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range"> -->
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-lable"> Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please submit some comments for reviews</div>
          </div>
          <button class="btn btn-outline-dark">Submit</button>
        </form>
        <hr>
        <%}%>
        <%if (listing.reviews.length > 0)  {%>
          <div class="row">
            <p><b>All Reviews</b></p>
            <%for(review of listing.reviews){%>
              <div class="card col-5 ms-3 mb-1">
                <div class="card-body">
                  <h5 class="card-title">@<%=review.author.username %> </h5>
                  <p class="starability-result card-text" data-rating="<%=review.rating%>">
                  </p>
                  <P class="card-text">
                    <%=review.comment%>
                  </P>
                </div>
                <form class="mb-1" method="POST"
                  action="/listings/<%=listing._id %>/reviews/<%=review._id%>?_method=DELETE">
                  <button class="btn btn-sm btn-dark mb-2">DELETE</button>
                </form>
                <!-- this is method to delete by using pull method and this is mongodb method -->
              </div>
              <%}%>
          </div>
        <%}%>
      </div>
    </div>
    <div class="col-6 offset-2 mb-3">
      <h3>Where you'll be</h3>
      <div id="map"></div>
    </div>
  </div>
  <script>
    let mapToken = "<%= process.env.MAP_TOKEN %>";
    console.log(mapToken);
    mapboxgl.accessToken = mapToken;
    const map = new mapboxgl.Map({
        container: "map", 
        style: "mapbox://styles/mapbox/streets-v12",
        center: [ 77.216721,28.644800 ],
        zoom: 9,
    });
</script>
